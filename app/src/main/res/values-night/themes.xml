<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HardTask2" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/black</item>
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>
    <style name="Theme.HardTask2" parent="Base.Theme.HardTask2" />

    <style name="full_edit_text_style" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/input</item>
        <item name="hintTextColor">@android:color/black</item>
        <item name="android:layout_marginTop">15dp</item>

    </style>

    <style name="spinner_style">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="hintTextColor">@android:color/black</item>
    </style>
    <style name="title_text_style" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="textAllCaps">true</item>
    </style>
    <style name="text_style" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="btn_style" >
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>